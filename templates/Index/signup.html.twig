{% extends 'base.html.twig' %}
{% block title %}Sign Up{% endblock %}
{% block body %}
<div
        class="container border border-dark rounded-lg w-50  my-3 p-2 bg-light"
>
    <div>
        <div class="mx-auto">
            <h4>Sign Up</h4>
        </div>
    </div>
    <form method="POST" action="{{ path('register') }}" id="signupForm">
        <div class="form-group">
            <label for="name">Name</label>
            <input
                    name="fullname"
                    class="form-control"
                    type="text"
                    id="name"
                    placeholder="Enter name"
            />
            <div id="errorName" class="invalid-feedback">

            </div>
        </div>
        <div class="form-group">
            <label for="email">Email address</label>
            <input
                    name="email"
                    class="form-control"
                    type="email"
                    id="email"
                    placeholder="name@example.com"
                    value=""
            />
            <div id="errorEmail" class="invalid-feedback">

            </div>

            <small class="form-text text-muted"
            >Your email will not ever be shared</small
            >
        </div>
        <div class="form-group">
            <label for="username">Username</label>
            <input
                    name="username"
                    class="form-control"
                    type="text"
                    id="username"
                    placeholder="Enter Username"
            />
            <div id="errorUserName" class="invalid-feedback">
            </div>

        </div>
        <div  class="form-group">
            <label for="password">Password</label>
            <input class="form-control " name="password" type="password" id="password" />
            <div class="invalid-feedback" id="errorPass">
            </div>
        </div>
        <div class="form-group">
            <label for="password">Confirm Password</label>
            <input  class="form-control " type="password" id="confirmPass" />
            <div id="errorCon" class="invalid-feedback">

            </div>
        </div>
        <button type="button" onclick="signup()" class="btn btn-outline-success">
            Sign Up
        </button>
</div>
</form>
{% endblock %}
    {% block javascripts %}
<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
<script type="text/javascript" src="{{asset('build/js/signup.js')}}"></script>
{% endblock %}

